# Virtual Land World - Environment Configuration
# Copy this file to .env and fill in actual values

# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME="Virtual Land World"
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://virtualworld:password@localhost:5432/virtualworld
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# JWT Security
JWT_SECRET_KEY=your-super-secret-key-minimum-32-characters-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS
CORS_ORIGINS=[]
CORS_ORIGIN_REGEX=".*"
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Payment Gateways (Bangladesh)
BACKEND_URL=http://localhost:8000

# bKash
BKASH_API_KEY=your_bkash_api_key
BKASH_API_SECRET=your_bkash_api_secret
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
BKASH_API_URL=https://checkout.sandbox.bka.sh/v1.2.0-beta

# Nagad
NAGAD_API_KEY=your_nagad_api_key
NAGAD_API_SECRET=your_nagad_api_secret
NAGAD_MERCHANT_ID=your_nagad_merchant_id
NAGAD_MERCHANT_KEY=your_nagad_merchant_key
NAGAD_API_URL=http://sandbox.mynagad.com:10080/remote-payment-gateway-1.0

# Rocket
ROCKET_API_KEY=your_rocket_api_key
ROCKET_API_SECRET=your_rocket_api_secret
ROCKET_MERCHANT_ID=your_rocket_merchant_id
ROCKET_SECRET_KEY=your_rocket_secret_key
ROCKET_API_URL=https://sandbox.rocketdigital.com.bd/api

# SSLCommerz
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_API_URL=https://sandbox.sslcommerz.com

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-characters-minimum

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# World Generation
DEFAULT_WORLD_SEED=12345
CHUNK_CACHE_TTL=3600
MAX_CHUNKS_IN_MEMORY=1000

# File Storage
STORAGE_BACKEND=local
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=virtualworld-chunks
AWS_REGION=ap-south-1

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=
