# Virtual Land World - Example Environment Configuration
# Copy this file to .env and replace ALL dev defaults before production.

# Database/Redis (Docker Compose uses these defaults)
DB_USER=virtualworld
DB_PASSWORD=changeme
DB_NAME=virtualworld
REDIS_PASSWORD=changeme

# Backend required secrets (DO NOT use these values in production)
JWT_SECRET_KEY=dev-jwt-secret-change-me
ENCRYPTION_KEY=dev-encryption-key-change-me

# Admin bootstrap
# - development: demo admin is created by default (unless disabled)
# - production: you MUST provide ADMIN_BOOTSTRAP_EMAIL and ADMIN_BOOTSTRAP_PASSWORD
CREATE_DEMO_ADMIN=true
DEMO_ADMIN_EMAIL=demo@example.com
DEMO_ADMIN_PASSWORD=DemoPassword123!
ADMIN_BOOTSTRAP_EMAIL=
ADMIN_BOOTSTRAP_PASSWORD=

# Runtime
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_LOG_LEVEL=WARNING

# CORS (comma-separated or JSON array)
# In production, set this to your actual frontend domain(s)
# CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
# Leave empty in development to allow all origins (NOT recommended for production)
CORS_ORIGINS=

# Optional: payment gateways (leave blank in dev)
BKASH_API_KEY=
BKASH_API_SECRET=
BKASH_APP_KEY=
BKASH_APP_SECRET=
NAGAD_API_KEY=
NAGAD_API_SECRET=
NAGAD_MERCHANT_ID=
NAGAD_MERCHANT_KEY=
ROCKET_API_KEY=
ROCKET_API_SECRET=
ROCKET_MERCHANT_ID=
ROCKET_SECRET_KEY=
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASSWORD=
